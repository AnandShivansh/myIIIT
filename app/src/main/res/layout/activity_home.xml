<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iiit_home"
        android:layout_above="@+id/home_welcome"
        android:contentDescription="IIIT-H logo" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/main2"
        android:textSize="24sp"
        android:id="@+id/home_welcome"
        android:layout_above="@+id/home_user_name"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_user_name"
        android:layout_centerInParent="true"
        android:textColor="@color/main1"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_user_name"
        android:layout_marginTop="25dp"
        android:text="@string/home_text"
        />
</RelativeLayout>