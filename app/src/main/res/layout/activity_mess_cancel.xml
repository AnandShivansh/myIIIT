<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessCancelFragment"
    android:gravity="center_horizontal"
    android:padding="12dp"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uncancel"
        android:id="@+id/uncancel_box"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel/Uncancel meals for"
        android:id="@+id/cancel_uncancel_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_date"
        android:padding="12dp"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.TextAppearance.HighlightDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:id="@+id/to_end_date_label"
        android:textAppearance="@style/AppTheme.TextAppearance.IgnoreDateLabel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/end_date"
        android:padding="12dp"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.TextAppearance.IgnoreDate" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:id="@+id/breakfast_box"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:id="@+id/lunch_box"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:id="@+id/dinner_box"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit_btn"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_prog"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>